<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CityApp.Views.PolyclinicRegistrationPage"
             Title="Запись на прием">

    <Grid RowSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <WebView x:Name="Browser" Grid.Row="0" Source="https://uslugi.mosreg.ru/zdrav/" 
                 Navigating="Browser_Navigating" Navigated="Browser_Navigated"/>
        <ProgressBar x:Name="Progress" Grid.Row="1" Progress="0.15" HorizontalOptions="Fill"/>
    </Grid>
</ContentPage>