             xmlns:trig="clr-namespace:CityApp.Triggers"
             x:Class="CityApp.View.TaxiPage"
             x:Name="page"
             BindingContext="{StaticResource TaxiViewModel}"
             Title="{Binding Title}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="ListView">
                <Style.Triggers>
                    <EventTrigger Event="ItemSelected">
                        <trig:ListViewItemSelectedTrigger/>
                    </EventTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ListView ItemsSource="{Binding Taxis}" HasUnevenRows="True">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <ViewCell.View>
                        <Grid Padding="16,4,16,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Text="{Binding Name}" VerticalOptions="Center" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontSize="Large" TextColor="Accent"/>
