                                                <ViewCell.View>
                                                    <Label Text="{Binding}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontSize="Medium">
                                                        <Label.GestureRecognizers>
                                                            <TapGestureRecognizer Command="{Binding BindingContext.MakeACallCommand, Source={x:Reference page}}" CommandParameter="{Binding}"/>
                                                        </Label.GestureRecognizers>
                                                    </Label>
                                                </ViewCell.View>
                                            </ViewCell>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackLayout>-->
